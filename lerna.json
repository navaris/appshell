{
  "useWorkspaces": true,
  "version": "fixed",
  "npmClient": "yarn",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore: release [skip ci] %s"
    }
  },
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/examples/**",
    ".github/**"
  ]
}