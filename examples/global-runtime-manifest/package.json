{
  "name": "global-runtime-manifest",
  "version": "0.0.1",
  "description": "Full example using @appshell/manifest-webpack-plugin, @appshell/cli and @appshell/react-host to build Module Federation micro-frontends",
  "main": "index.js",
  "workspaces": [
    "apps/*"
  ],
  "repository": "https://github.com/navaris/appshell.git",
  "author": "Robert Hamilton <rh@navaris.com>",
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "dotenv -- lerna run build",
    "postbuild": "dotenv -- appshell generate manifest --configsDir appshell_configs --outDir apps/appshell-host",
    "clean": "lerna run --parallel clean && rm -rf coverage appshell_configs appshell.manifest.json",
    "lint": "eslint apps/**/*.ts",
    "serve": "dotenv -- lerna run --parallel serve",
    "start": "dotenv -- lerna run --parallel start",
    "stats": "lerna run --parallel stats",
    "test": "jest",
    "test:ci": "yarn test a --watchAll=false --coverage --reporters=jest-junit"
  },
  "dependencies": {
    "@appshell/cli": "0.1.5",
    "@appshell/manifest-webpack-plugin": "0.1.5",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.12",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "craco": "0.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "typescript": "4.9.5",
    "web-vitals": "2.1.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {}
}