{
  "name": "appshell",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/navaris/appshell.git",
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "lerna run --scope=@appshell/manifest-webpack-plugin build && lerna run --ignore=@appshell/manifest-webpack-plugin build",
    "clean": "lerna run --parallel clean && rm -rf coverage",
    "lint": "eslint 'packages/**/*.{ts,tsx}'",
    "serve": "dotenv -- lerna run --parallel serve",
    "start": "dotenv -- lerna run --parallel start",
    "stats": "lerna run --parallel stats",
    "test": "jest",
    "test:ci": "yarn test a --silent --watchAll=false --coverage --reporters=jest-junit"
  },
  "dependencies": {
    "@automapper/core": "8.7.7",
    "@automapper/pojos": "8.7.7",
    "cross-env": "7.0.3",
    "dotenv-cli": "7.0.0",
    "hash-sum": "2.0.0",
    "lodash": "4.17.21",
    "npm-run-all": "4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "0.14.0",
    "react-spinners": "0.13.8",
    "schema-utils": "4.0.0",
    "typescript": "4.9.5",
    "web-vitals": "3.1.1",
    "yaml": "2.2.1",
    "yargs": "17.7.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.21.0",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "@types/hash-sum": "1.0.0",
    "@types/jest": "27.5.2",
    "@types/lodash": "4.14.191",
    "@types/node": "18.14.6",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/react-refresh": "0.14.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "babel-loader": "9.1.2",
    "browserslist": "4.21.5",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.5.0",
    "jest-fetch-mock": "3.0.3",
    "jest-junit": "15.0.0",
    "json-schema-to-typescript": "12.0.0",
    "lerna": "^4.0.0",
    "postcss": "8.4.21",
    "postcss-loader": "7.0.2",
    "postcss-preset-env": "8.0.1",
    "prettier": "2.8.4",
